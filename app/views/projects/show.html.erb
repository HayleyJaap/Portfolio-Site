<div class="jumbotron">
  <div class="container p-5 my-5 bg-success text-white rounded border border-2 border-dark">
    <h1 class="display-3"> <%= @project.title %> </h1>
    <p>
      <%= @project.description %>
    </p>
    <div class="btn-group">
      <%= link_to "Back to projects", root_path, class: "btn btn-dark" %>
      <% if user_signed_in? %>
        <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-dark" %>
        <%= button_to "Destroy this project", @project, method: :delete, class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>


